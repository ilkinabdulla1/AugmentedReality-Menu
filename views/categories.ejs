<main class="main-content" style="display: flex; align-items: center; justify-content: flex-end; min-height: 100vh; background-color: #f9f9f9;">
  <div class="container" style="max-width: 1200px; background: #ffffff; padding: 40px 50px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); margin-right: 20px;">
    <!-- Page Header -->
    <div class="page-header" style="text-align: center; margin-bottom: 30px;">
      <h1 style="font-size: 2.5rem; font-weight: bold; color: #4A4A4A;">Category Management</h1>
    </div>

    <!-- Add New Category Section -->
    <section class="add-category" style="margin-bottom: 40px;">
      <h2 style="font-size: 1.8rem; font-weight: bold; color: #4A4A4A; text-align: center; margin-bottom: 20px;">Add New Category</h2>
      <form action="/categories/add" method="POST" style="margin-bottom: 20px;">
        <!-- Input for Category Name -->
        <div class="form-group" style="margin-bottom: 20px;">
          <label for="name" style="font-weight: bold; font-size: 1.1rem;">Category Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Category Name"
            required
            style="padding: 12px; border-radius: 8px; border: 1px solid #ccc; font-size: 1rem;"
          />
        </div>

        <!-- Submit Button -->
        <div style="text-align: center;">
          <button
            type="submit"
            class="btn btn-primary"
            style="background-color: #4CAF50; border: none; padding: 12px 24px; font-size: 1rem; border-radius: 8px; color: #fff; transition: background-color 0.3s ease;"
            onmouseover="this.style.backgroundColor='#45a049';"
            onmouseout="this.style.backgroundColor='#4CAF50';"
          >
            Add Category
          </button>
        </div>
      </form>
    </section>

    <!-- Existing Categories Section -->
    <section class="categories">
      <h2 style="font-size: 1.8rem; font-weight: bold; color: #4A4A4A; text-align: center; margin-bottom: 20px;">Existing Categories</h2>
      <table class="table" style="width: 100%; border-collapse: collapse; margin-bottom: 20px; font-size: 1rem;">
        <thead>
          <tr style="background-color: #f0f0f0;">
            <th style="padding: 12px; text-align: left; font-weight: bold; border-bottom: 1px solid #ddd;">Name</th>
            <th style="padding: 12px; text-align: left; font-weight: bold; border-bottom: 1px solid #ddd;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (categories && categories.length > 0) { %>
            <% categories.forEach(category => { %>
              <tr>
                <td style="padding: 12px; border-bottom: 1px solid #ddd;"><%= category.name %></td>
                <td style="padding: 12px; border-bottom: 1px solid #ddd;">
                  <a
                    href="/categories/<%= category._id %>/edit"
                    class="btn btn-sm btn-warning"
                    style="margin-right: 10px; background-color: #FFC107; border: none; padding: 8px 12px; font-size: 0.9rem; color: #fff; border-radius: 5px; text-decoration: none; transition: background-color 0.3s ease;"
                    onmouseover="this.style.backgroundColor='#e6b005';"
                    onmouseout="this.style.backgroundColor='#FFC107';"
                  >
                    Edit
                  </a>
                  <a
                    href="/categories/<%= category._id %>/delete"
                    class="btn btn-sm btn-danger"
                    style="background-color: #FF5252; border: none; padding: 8px 12px; font-size: 0.9rem; color: #fff; border-radius: 5px; text-decoration: none; transition: background-color 0.3s ease;"
                    onmouseover="this.style.backgroundColor='#e04a4a';"
                    onmouseout="this.style.backgroundColor='#FF5252';"
                  >
                    Delete
                  </a>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="2" style="padding: 20px; text-align: center; color: #999;">No categories available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </section>
