  <main class="main-content" style="min-height: 100vh; background-color: #f5f7fa; padding: 20px;">
    <div class="container" style="max-width: 800px; background: #ffffff; padding: 40px; border-radius: 15px; box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);">
      <!-- Page Header -->
      <div class="page-header" style="text-align: center; margin-bottom: 40px;">
        <h1 style="font-size: 2.5rem; font-weight: bold; color: #333;">Edit Menu Item</h1>
        <p style="font-size: 1.2rem; color: #777;">Modify the details of your menu item below.</p>
      </div>
  
      <!-- Edit Menu Item Form -->
      <section class="edit-menu-item">
        <form
          action="/menu-management/<%= menuItem._id %>/update"
          method="POST"
          enctype="multipart/form-data"
          style="background: #f9f9f9; padding: 30px; border-radius: 15px; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);"
        >
          <!-- Menu Item Name -->
          <div class="form-group" style="margin-bottom: 25px;">
            <label for="name" style="font-weight: bold; font-size: 1.2rem;">Menu Item Name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-control"
              value="<%= menuItem.name %>"
              required
              style="padding: 15px; border-radius: 10px; border: 1px solid #ddd; font-size: 1rem;"
            />
          </div>
  
          <!-- Category -->
          <div class="form-group" style="margin-bottom: 25px;">
            <label for="category" style="font-weight: bold; font-size: 1.2rem;">Category</label>
            <select
              id="category"
              name="category"
              class="form-control"
              required
              style="padding: 15px; border-radius: 10px; border: 1px solid #ddd; font-size: 1rem;"
            >
              <% categories.forEach(category => { %>
                <option
                  value="<%= category._id %>"
                  <%= menuItem.category && menuItem.category._id.equals(category._id) ? 'selected' : '' %>
                >
                  <%= category.name %>
                </option>
              <% }) %>
            </select>
          </div>
  
          <!-- Price -->
          <div class="form-group" style="margin-bottom: 25px;">
            <label for="price" style="font-weight: bold; font-size: 1.2rem;">Price</label>
            <input
              type="number"
              id="price"
              name="price"
              class="form-control"
              value="<%= menuItem.price %>"
              step="0.01"
              required
              style="padding: 15px; border-radius: 10px; border: 1px solid #ddd; font-size: 1rem;"
            />
          </div>
  
          <!-- Image Upload -->
          <div class="form-group" style="margin-bottom: 25px;">
            <label for="imagePath" style="font-weight: bold; font-size: 1.2rem;">Upload New Image</label>
            <input
              type="file"
              id="imagePath"
              name="imagePath"
              class="form-control-file"
              style="margin-top: 10px;"
            />
            <% if (menuItem.imagePath) { %>
              <p style="margin-top: 15px; font-size: 1rem;">Current Image:</p>
              <img
                src="<%= menuItem.imagePath %>"
                alt="<%= menuItem.name %>"
                style="width: 100px; height: 100px; object-fit: cover; border-radius: 10px; border: 1px solid #ddd;"
              />
            <% } %>
          </div>
  
          <!-- 3D Model Upload -->
          <div class="form-group" style="margin-bottom: 25px;">
            <label for="threeDFile" style="font-weight: bold; font-size: 1.2rem;">Upload 3D Model</label>
            <input
              type="file"
              id="threeDFile"
              name="threeDFile"
              class="form-control-file"
              style="margin-top: 10px;"
            />
            <% if (menuItem.threeDFilePath) { %>
              <p style="margin-top: 15px; font-size: 1rem;">
                Current 3D Model: 
                <a
                  href="<%= menuItem.threeDFilePath %>"
                  target="_blank"
                  style="color: #007bff; text-decoration: underline; font-weight: bold;"
                >
                  View/Download
                </a>
              </p>
            <% } %>
          </div>
  
          <!-- Submit Button -->
          <div style="text-align: center;">
            <button
              type="submit"
              class="btn btn-primary"
              style="background-color: #4CAF50; border: none; padding: 12px 25px; font-size: 1rem; border-radius: 10px; color: #fff; font-weight: bold; transition: background-color 0.3s ease;"
              onmouseover="this.style.backgroundColor='#45a049';"
              onmouseout="this.style.backgroundColor='#4CAF50';"
            >
              Save Changes
            </button>
          </div>
        </form>
