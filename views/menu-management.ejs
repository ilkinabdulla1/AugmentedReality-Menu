<main class="main-content" style="min-height: 100vh; background-color: #f5f7fa; padding: 20px;">
  <div class="container" style="max-width: 1200px; background: #ffffff; padding: 40px; border-radius: 15px; box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);">
    <!-- Page Header -->
    <div class="page-header" style="text-align: center; margin-bottom: 40px;">
      <% if (selectedRestaurant) { %>
        <h1 style="font-size: 2.5rem; font-weight: bold; color: #333;">Menu Management for <%= selectedRestaurant.name %></h1>
      <% } else { %>
        <h1 style="font-size: 2.5rem; font-weight: bold; color: #333;">Menu Management</h1>
      <% } %>
      <p style="font-size: 1.2rem; color: #777;">Manage your restaurant's menu items efficiently.</p>
    </div>

    <!-- Restaurant Dropdown -->
    <div class="form-group" style="text-align: center; margin-bottom: 40px;">
      <label for="restaurantDropdown" class="h5" style="font-size: 1.2rem; font-weight: bold; margin-bottom: 10px; display: block;">Select Restaurant</label>
      <select
        id="restaurantDropdown"
        class="form-control"
        style="width: 60%; max-width: 500px; margin: 0 auto; padding: 15px; font-size: 0.9rem; border-radius: 10px; border: 1px solid #ddd;"
        onchange="location = this.value;"
      >
        <option value="" disabled selected>Select a Restaurant</option>
        <% restaurants.forEach(restaurant => { %>
          <option
            value="/menu-management/<%= restaurant._id %>"
            <%= selectedRestaurant && selectedRestaurant._id.equals(restaurant._id) ? 'selected' : '' %>
          >
            <%= restaurant.name %>
          </option>
        <% }) %>
      </select>
    </div>

    <% if (selectedRestaurant) { %>
      <!-- Add New Menu Item -->
      <section class="add-menu-item" style="margin-bottom: 50px;">
        <h2 style="font-size: 2rem; font-weight: bold; color: #333; text-align: center;">Add New Menu Item</h2>
        <form
          action="/menu-management/<%= selectedRestaurant._id %>/add"
          method="POST"
          enctype="multipart/form-data"
          style="margin-top: 30px; background: #f9f9f9; padding: 30px; border-radius: 15px; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);"
        >
          <div class="form-group" style="margin-bottom: 20px;">
            <label for="name" style="font-weight: bold; font-size: 1.2rem;">Menu Item Name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Menu Item Name"
              required
              style="padding: 15px; border-radius: 10px; border: 1px solid #ddd; font-size: 1rem;"
            />
          </div>

          <div class="form-group" style="margin-bottom: 20px;">
            <label for="price" style="font-weight: bold; font-size: 1.2rem;">Price</label>
            <input
              type="number"
              id="price"
              name="price"
              class="form-control"
              placeholder="Enter Price"
              step="0.01"
              required
              style="padding: 15px; border-radius: 10px; border: 1px solid #ddd; font-size: 1rem;"
            />
          </div>

          <div class="form-group" style="margin-bottom: 20px;">
            <label for="category" style="font-weight: bold; font-size: 1.0rem;">Category</label>
            <select
              id="category"
              name="category"
              class="form-control"
              required
              style="padding: 15px; border-radius: 10px; border: 1px solid #ddd; font-size: 0.85rem;"
            >
              <% categories.forEach(category => { %>
                <option value="<%= category._id %>"><%= category.name %></option>
              <% }) %>
            </select>
          </div>

          <div class="form-group" style="margin-bottom: 20px;">
            <label for="imagePath" style="font-weight: bold; font-size: 1.2rem;">Upload Image</label>
            <input
              type="file"
              id="imagePath"
              name="imagePath"
              class="form-control-file"
              style="font-size: 1rem;"
            />
          </div>

          <div style="text-align: center;">
            <button
              type="submit"
              class="btn btn-primary"
              style="background-color: #4CAF50; border: none; padding: 12px 25px; font-size: 1rem; border-radius: 10px; color: #fff; font-weight: bold; transition: background-color 0.3s ease;"
              onmouseover="this.style.backgroundColor='#45a049';"
              onmouseout="this.style.backgroundColor='#4CAF50';"
            >
              Add Menu Item
            </button>
          </div>
        </form>
      </section>

      <!-- Existing Menu Items -->
      <section class="menu-items">
        <h2 style="font-size: 2rem; font-weight: bold; color: #333; text-align: center;">Existing Menu Items</h2>
        <% if (menuItems.length > 0) { %>
          <form action="/menu-management/<%= selectedRestaurant._id %>/delete-multiple" method="POST" style="margin-top: 30px;">
            <table class="table" style="width: 100%; border-collapse: collapse; margin-top: 20px; background: #ffffff; border-radius: 15px; overflow: hidden;">
              <thead style="background-color: #4CAF50; color: #fff;">
                <tr>
                  <th style="padding: 15px; text-align: left;">Select</th>
                  <th style="padding: 15px; text-align: left;">Image</th>
                  <th style="padding: 15px; text-align: left;">Name</th>
                  <th style="padding: 15px; text-align: left;">Price</th>
                  <th style="padding: 15px; text-align: left;">Category</th>
                  <th style="padding: 15px; text-align: left;">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% menuItems.forEach(item => { %>
                  <tr style="border-bottom: 1px solid #ddd;">
                    <td style="padding: 15px; text-align: center;">
                      <input type="checkbox" name="menuItems[]" value="<%= item._id %>" />
                    </td>
                    <td style="padding: 15px; text-align: center;">
                      <% if (item.imagePath) { %>
                        <img
                          src="<%= item.imagePath %>"
                          alt="<%= item.name %>"
                          style="width: 80px; height: 80px; object-fit: cover; border-radius: 10px;"
                        />
                      <% } else { %>
                        <span style="color: #999;">No Image</span>
                      <% } %>
                    </td>
                    <td style="padding: 15px;"><%= item.name %></td>
                    <td style="padding: 15px;">$<%= item.price.toFixed(2) %></td>
                    <td style="padding: 15px;"><%= item.category ? item.category.name : 'N/A' %></td>
                    <td style="padding: 15px;">
                      <a
                        href="/menu-management/<%= item._id %>/edit"
                        class="btn btn-sm btn-warning"
                        style="padding: 10px 15px; border-radius: 10px; color: #fff; font-size: 0.9rem;"
                      >
                        Edit
                      </a>
                      <a
                        href="/menu-management/<%= item._id %>/delete"
                        class="btn btn-sm btn-danger"
                        style="padding: 10px 15px; border-radius: 10px; color: #fff; font-size: 0.9rem;"
                      >
                        Delete
                      </a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>

            <div style="text-align: center; margin-top: 30px;">
              <button
                type="submit"
                class="btn btn-danger"
                style="background-color: #F44336; border: none; padding: 12px 25px; font-size: 1rem; border-radius: 10px; color: #fff; font-weight: bold; transition: background-color 0.3s ease;"
                onmouseover="this.style.backgroundColor='#e53935';"
                onmouseout="this.style.backgroundColor='#F44336';"
              >
                Delete Selected Items
              </button>
            </div>
          </form>
        <% } else { %>
          <p style="text-align: center; color: #999; margin-top: 20px;">No menu items available for this restaurant.</p>
        <% } %>
      </section>
    <% } else { %>
      <p class="text-center mt-4" style="color: #999;">Please select a restaurant to manage its menu.</p>
    <% } %>
  </div>
</main>
        
    
    

