<main class="main-content" style="min-height: 100vh; background-color: #f5f7fa; padding: 20px;">
  <div class="container" style="max-width: 800px; background: #ffffff; padding: 40px; border-radius: 15px; box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);">
    <!-- Page Header -->
    <div class="page-header" style="text-align: center; margin-bottom: 40px;">
      <h1 style="font-size: 2.5rem; font-weight: bold; color: #333;">Admin Profile</h1>
      <p style="font-size: 1.2rem; color: #777;">View and update your profile details below.</p>
    </div>

    <!-- Admin Information Section -->
    <section class="admin-info" style="margin-bottom: 40px;">
      <h2 style="font-size: 1.8rem; font-weight: bold; color: #333; text-align: center;">Admin Information</h2>
      <div style="background: #f9f9f9; padding: 20px; border-radius: 15px; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1); margin-top: 20px;">
        <p style="font-size: 1rem; color: #555;"><strong>Name:</strong> <%= admin.name %></p>
        <p style="font-size: 1rem; color: #555;"><strong>Email:</strong> <%= admin.email %></p>
        <p style="font-size: 1rem; color: #555;"><strong>Bio:</strong> <%= admin.bio %></p>
        <p style="font-size: 1rem; color: #555;"><strong>Picture:</strong></p>
        <% if (admin.picture) { %>
          <div style="text-align: center; margin-top: 15px;">
            <img
              src="<%= admin.picture %>"
              alt="Admin Picture"
              style="width: 120px; height: 120px; object-fit: cover; border-radius: 50%; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);"
            />
          </div>
        <% } else { %>
          <p style="text-align: center; color: #999; margin-top: 10px;">No picture uploaded.</p>
        <% } %>
      </div>
    </section>

    <!-- Profile Update Form Section -->
    <section class="update-profile">
      <h2 style="font-size: 1.8rem; font-weight: bold; color: #333; text-align: center;">Update Profile</h2>
      <form
        action="/profile"
        method="POST"
        enctype="multipart/form-data"
        style="background: #f9f9f9; padding: 30px; border-radius: 15px; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1); margin-top: 20px;"
      >
        <!-- Name -->
        <div class="form-group" style="margin-bottom: 20px;">
          <label for="name" style="font-weight: bold; font-size: 1.2rem;">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            value="<%= admin.name %>"
            required
            style="padding: 15px; border-radius: 10px; border: 1px solid #ddd; font-size: 1rem;"
          />
        </div>

        <!-- Email -->
        <div class="form-group" style="margin-bottom: 20px;">
          <label for="email" style="font-weight: bold; font-size: 1.2rem;">Email</label>
          <input
            disabled
            type="email"
            id="email"
            name="email"
            class="form-control"
            value="<%= admin.email %>"
            style="padding: 15px; border-radius: 10px; border: 1px solid #ddd; font-size: 1rem;"
          />
        </div>

        <!-- Bio -->
        <div class="form-group" style="margin-bottom: 20px;">
          <label for="bio" style="font-weight: bold; font-size: 1.2rem;">Bio</label>
          <textarea
            id="bio"
            name="bio"
            class="form-control"
            style="padding: 15px; border-radius: 10px; border: 1px solid #ddd; font-size: 1rem;"
          ><%= admin.bio %></textarea>
        </div>

        <!-- Profile Picture -->
        <div class="form-group" style="margin-bottom: 20px;">
          <label for="picture" style="font-weight: bold; font-size: 1.2rem;">Profile Picture</label>
          <input
            type="file"
            id="picture"
            name="picture"
            class="form-control-file"
            style="margin-top: 10px;"
          />
          <% if (admin.picture) { %>
            <div style="text-align: center; margin-top: 15px;">
              <img
                src="<%= admin.picture %>"
                alt="Current Picture"
                style="width: 100px; height: 100px; object-fit: cover; border-radius: 50%; border: 2px solid #ddd;"
              />
            </div>
          <% } %>
        </div>

        <!-- Submit Button -->
        <div style="text-align: center;">
          <button
            type="submit"
            class="btn btn-primary"
            style="background-color: #4CAF50; border: none; padding: 12px 25px; font-size: 1rem; border-radius: 10px; color: #fff; font-weight: bold; transition: background-color 0.3s ease;"
            onmouseover="this.style.backgroundColor='#45a049';"
            onmouseout="this.style.backgroundColor='#4CAF50';"
          >
            Update Profile
          </button>
        </div>
      </form>
    </section>
  </div>
