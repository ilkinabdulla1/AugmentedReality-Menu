<!-- Restaurant Management Page -->
<main class="main-content" style="min-height: 100vh; background-color: #f5f7fa; padding: 20px;">
  <div class="container" style="max-width: 1200px; background: #ffffff; padding: 40px; border-radius: 15px; box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);">
    <!-- Page Header -->
    <div class="page-header" style="text-align: center; margin-bottom: 40px;">
      <h1 style="font-size: 2.5rem; font-weight: bold; color: #333;">Restaurant Management</h1>
      <p style="font-size: 1.2rem; color: #777;">Manage all your restaurant details and menus in one place.</p>
    </div>

    <!-- Add/Edit Restaurant Information Section -->
    <section class="restaurant-info" style="margin-bottom: 50px;">
      <h2 style="font-size: 2rem; font-weight: bold; color: #333; margin-bottom: 20px;">Add New Restaurant</h2>
      <form
        action="/restaurant-management/add-or-edit"
        method="POST"
        style="margin-top: 20px; background: #f9f9f9; padding: 30px; border-radius: 15px; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);"
      >
        <!-- Input for Restaurant Name -->
        <div class="form-group" style="margin-bottom: 20px;">
          <label for="name" style="font-weight: bold; font-size: 1.2rem;">Restaurant Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Restaurant Name"
            required
            style="padding: 15px; border-radius: 10px; border: 1px solid #ddd; font-size: 1rem;"
          />
        </div>

        <!-- Input for Address -->
        <div class="form-group" style="margin-bottom: 20px;">
          <label for="address" style="font-weight: bold; font-size: 1.2rem;">Address</label>
          <textarea
            id="address"
            name="address"
            class="form-control"
            placeholder="Enter Address"
            required
            style="padding: 15px; border-radius: 10px; border: 1px solid #ddd; font-size: 1rem;"
          ></textarea>
        </div>

        <!-- Input for Contact Information -->
        <div class="form-group" style="margin-bottom: 20px;">
          <label for="contact" style="font-weight: bold; font-size: 1.2rem;">Contact Information</label>
          <input
            type="text"
            id="contact"
            name="contact"
            class="form-control"
            placeholder="Enter Contact Info"
            required
            style="padding: 15px; border-radius: 10px; border: 1px solid #ddd; font-size: 1rem;"
          />
        </div>

        <!-- Input for Business Hours -->
        <div class="form-group" style="margin-bottom: 20px;">
          <label for="businessHours" style="font-weight: bold; font-size: 1.2rem;">Business Hours</label>
          <input
            type="text"
            id="businessHours"
            name="businessHours"
            class="form-control"
            placeholder="Enter Business Hours (e.g., 9 AM - 9 PM)"
            required
            style="padding: 15px; border-radius: 10px; border: 1px solid #ddd; font-size: 1rem;"
          />
        </div>

        <!-- Submit Button -->
        <div style="text-align: center;">
          <button
            type="submit"
            class="btn btn-primary"
            style="background-color: #4CAF50; border: none; padding: 12px 25px; font-size: 1rem; border-radius: 10px; color: #fff; font-weight: bold; transition: background-color 0.3s ease;"
            onmouseover="this.style.backgroundColor='#45a049';"
            onmouseout="this.style.backgroundColor='#4CAF50';"
          >
            Save Restaurant Info
          </button>
        </div>
      </form>
    </section>

    <!-- Restaurants Section -->
    <section class="restaurants">
      <h2 style="font-size: 2rem; font-weight: bold; color: #333; margin-bottom: 20px;">All Restaurants</h2>
      <% if (restaurants && restaurants.length > 0) { %>
        <table
          class="table"
          style="width: 100%; border-collapse: collapse; margin-top: 20px; background: #fff; border-radius: 15px; overflow: hidden; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);"
        >
          <thead style="background-color: #4CAF50; color: #fff;">
            <tr>
              <th style="padding: 15px; text-align: left;">#</th>
              <th style="padding: 15px; text-align: left;">Restaurant Name</th>
              <th style="padding: 15px; text-align: left;">Address</th>
              <th style="padding: 15px; text-align: left;">Contact</th>
              <th style="padding: 15px; text-align: left;">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% restaurants.forEach((restaurant, index) => { %>
              <tr style="border-bottom: 1px solid #ddd; transition: background-color 0.3s;">
                <td style="padding: 15px; text-align: center;"><%= index + 1 %></td>
                <td style="padding: 15px; font-weight: bold; color: #333;"><%= restaurant.name %></td>
                <td style="padding: 15px; color: #666;"><%= restaurant.address %></td>
                <td style="padding: 15px; color: #666;"><%= restaurant.contact %></td>
                <td style="padding: 15px; text-align: center;">
                  <a
                    href="/menu-management/<%= restaurant._id %>"
                    class="btn btn-sm btn-info"
                    style="padding: 8px 15px; border-radius: 10px; color: #fff; background-color: #17a2b8; text-decoration: none; font-size: 0.9rem; transition: background-color 0.3s;"
                    onmouseover="this.style.backgroundColor='#138496';"
                    onmouseout="this.style.backgroundColor='#17a2b8';"
                  >
                    View Menu
                  </a>
                  <a
                    href="/restaurant-management/<%= restaurant._id %>/delete"
                    class="btn btn-sm btn-danger"
                    style="padding: 8px 15px; border-radius: 10px; color: #fff; background-color: #F44336; text-decoration: none; font-size: 0.9rem; transition: background-color 0.3s;"
                    onmouseover="this.style.backgroundColor='#e53935';"
                    onmouseout="this.style.backgroundColor='#F44336';"
                  >
                    Delete
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p style="text-align: center; color: #999; margin-top: 30px; font-size: 1.2rem;">No restaurants available</p>
      <% } %>
    </section>
  </div>
